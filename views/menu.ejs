<!-- views/menu.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Menu</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="inner">
        <div class="site-title">Food Ordering</div>
        <nav class="site-nav">
          <% if (currentUser) { %>
          <span class="muted">Signed in as <%= currentUser.email %></span>
          <a href="/">Home</a>
          <a href="/cart">Cart</a>
          <a href="/orders">My Orders</a>
          <% if (currentUser.isAdmin) { %><a href="/admin">Admin</a><% } %>
          <a href="/auth/logout">Logout</a>
          <% } else { %>
          <a href="/">Home</a>
          <a href="/auth/login">Login</a>
          <a href="/auth/register">Register</a>
          <% } %>
        </nav>
      </div>
    </header>

    <main class="container">
      <section class="card">
        <h2 style="margin-bottom: 12px">Menu</h2>

        <% if (!foodItems || foodItems.length === 0) { %>
        <p>No menu items available.</p>
        <% } else { %>
        <div class="menu-grid">
          <% foodItems.forEach(function(item){ %>
          <div class="card menu-card">
            <img
              src="<%= item.image || '/images/placeholder.svg' %>"
              alt="<%= item.name %>"
              onerror="this.onerror=null;this.src='/images/placeholder.svg';"
            />
            <div class="item-title"><%= item.name %></div>
            <div class="item-meta">
              <div><%= item.category || 'General' %></div>
              <div style="font-weight: 700">
                $<%= (item.price||0).toFixed(2) %>
              </div>
            </div>

            <form
              action="/cart/add"
              method="POST"
              style="
                margin-top: 10px;
                display: flex;
                gap: 8px;
                align-items: center;
              "
            >
              <input type="hidden" name="foodItemId" value="<%= item._id %>" />
              <input
                type="number"
                name="quantity"
                value="1"
                min="1"
                style="
                  width: 72px;
                  padding: 6px;
                  border-radius: 6px;
                  border: 1px solid #e6e9ef;
                "
              />
              <button type="submit" class="btn btn-primary">Add</button>
            </form>
          </div>
          <% }) %>
        </div>
        <% } %>
      </section>
    </main>
  </body>
</html>
